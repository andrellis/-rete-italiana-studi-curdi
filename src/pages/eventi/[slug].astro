---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const events = await getCollection('eventi');
  return events.map((event) => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

const { event } = Astro.props;
const { Content } = await event.render();
const isUpcoming = event.data.eventDate >= new Date();
---

<Layout 
  title={`${event.data.title} - Rete Italiana Studi Curdi`}
  description={event.data.description}
  image={event.data.heroImage}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Event Header -->
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{event.data.title}</h1>
      
      <div class="bg-gray-50 rounded-lg p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="flex items-center gap-3">
            <span class="text-2xl">üìÖ</span>
            <div>
              <p class="font-semibold text-gray-900">Data</p>
              <p class="text-gray-600">
                {event.data.eventDate.toLocaleDateString('it-IT', { 
                  weekday: 'long', 
                  year: 'numeric', 
                  month: 'long', 
                  day: 'numeric' 
                })}
              </p>
              {event.data.endDate && (
                <p class="text-gray-600">
                  Fino al {event.data.endDate.toLocaleDateString('it-IT')}
                </p>
              )}
            </div>
          </div>
          
          {event.data.location && (
            <div class="flex items-center gap-3">
              <span class="text-2xl">üìç</span>
              <div>
                <p class="font-semibold text-gray-900">Luogo</p>
                <p class="text-gray-600">{event.data.location}</p>
              </div>
            </div>
          )}
        </div>
        
        {event.data.registrationUrl && isUpcoming && (
          <div class="mt-4 pt-4 border-t border-gray-200">
            <a 
              href={event.data.registrationUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block bg-red-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-red-700 transition-colors"
            >
              Registrati all'Evento
            </a>
          </div>
        )}
      </div>

      {event.data.heroImage && (
        <img 
          src={event.data.heroImage} 
          alt={event.data.title}
          class="w-full h-64 md:h-96 object-cover rounded-lg mb-8"
        />
      )}
    </header>

    <!-- Event Content -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Event Footer -->
    <footer class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Condividi questo evento</h3>
          <div class="flex gap-2">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(event.data.title)}&url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-500 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-600 transition-colors"
            >
              Twitter
            </a>
            <a 
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-700 transition-colors"
            >
              Facebook
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-700 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-800 transition-colors"
            >
              LinkedIn
            </a>
          </div>
        </div>
        
        <a 
          href="/eventi" 
          class="text-red-600 hover:text-red-700 font-medium"
        >
          ‚Üê Torna agli eventi
        </a>
      </div>
    </footer>
  </article>
</Layout>

<style>
  .prose {
    color: #374151;
  }
  
  .prose h2 {
    color: #111827;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    color: #111827;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 1.25rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose blockquote {
    border-left: 4px solid #dc2626;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6b7280;
  }
  
  .prose a {
    color: #dc2626;
    text-decoration: none;
  }
  
  .prose a:hover {
    text-decoration: underline;
  }
  
  .prose img {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }
</style>
