---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articoli');
const sortedArticles = allArticles.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<Layout title="Articoli - Rete Italiana Studi Curdi" description="Articoli e pubblicazioni sulla cultura curda">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Articoli</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Esplora i nostri articoli e pubblicazioni sulla cultura, storia e societ√† curda
      </p>
    </div>

    {sortedArticles.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedArticles.map((article) => (
          <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            {article.data.heroImage && (
              <img 
                src={article.data.heroImage} 
                alt={article.data.title}
                class="w-full h-48 object-cover"
              />
            )}
            <div class="p-6">
              <h2 class="text-xl font-semibold text-gray-900 mb-2">
                <a href={`/articoli/${article.slug}`} class="hover:text-red-600 transition-colors">
                  {article.data.title}
                </a>
              </h2>
              <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                {article.data.description || article.body.slice(0, 150) + '...'}
              </p>
              <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
                <span>{article.data.pubDate.toLocaleDateString('it-IT')}</span>
                {article.data.author && <span>di {article.data.author}</span>}
              </div>
              {article.data.tags && article.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {article.data.tags.map((tag) => (
                    <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">Nessun articolo disponibile al momento.</p>
      </div>
    )}
  </div>
</Layout>
