---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const publications = await getCollection('pubblicazioni');
  return publications.map((publication) => ({
    params: { slug: publication.slug },
    props: { publication },
  }));
}

const { publication } = Astro.props;
const { Content } = await publication.render();
---

<Layout 
  title={`${publication.data.title} - Rete Italiana Studi Curdi`}
  description={publication.data.abstract}
>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Publication Header -->
    <header class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">{publication.data.title}</h1>
      
      <div class="bg-gray-50 rounded-lg p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Autori</h3>
            <p class="text-gray-700">{publication.data.authors.join(', ')}</p>
          </div>
          
          <div>
            <h3 class="font-semibold text-gray-900 mb-2">Pubblicato</h3>
            <p class="text-gray-700">
              {publication.data.publisher} • {publication.data.pubDate.toLocaleDateString('it-IT')}
            </p>
          </div>
        </div>
        
        <div class="mt-4 pt-4 border-t border-gray-200">
          <h3 class="font-semibold text-gray-900 mb-2">Abstract</h3>
          <p class="text-gray-700 leading-relaxed">{publication.data.abstract}</p>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap gap-4 mb-8">
        {publication.data.doi && (
          <a 
            href={`https://doi.org/${publication.data.doi}`}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors font-semibold"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd"></path>
            </svg>
            Visualizza su DOI
          </a>
        )}
        
        {publication.data.pdfUrl && (
          <a 
            href={publication.data.pdfUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 rounded-lg text-white bg-red-600 hover:bg-red-700 transition-colors font-semibold"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
            Scarica PDF
          </a>
        )}
      </div>

      {publication.data.tags && publication.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {publication.data.tags.map((tag) => (
            <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-sm">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Publication Content -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>

    <!-- Publication Footer -->
    <footer class="mt-12 pt-8 border-t border-gray-200">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Condividi questa pubblicazione</h3>
          <div class="flex gap-2">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(publication.data.title)}&url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-500 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-600 transition-colors"
            >
              Twitter
            </a>
            <a 
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-700 transition-colors"
            >
              Facebook
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.toString())}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-700 text-white px-4 py-2 rounded-lg text-sm hover:bg-blue-800 transition-colors"
            >
              LinkedIn
            </a>
          </div>
        </div>
        
        <a 
          href="/pubblicazioni" 
          class="text-red-600 hover:text-red-700 font-medium"
        >
          ← Torna alle pubblicazioni
        </a>
      </div>
    </footer>
  </article>
</Layout>

<style>
  .prose {
    color: #374151;
  }
  
  .prose h2 {
    color: #111827;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .prose h3 {
    color: #111827;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }
  
  .prose ul, .prose ol {
    margin-bottom: 1.25rem;
  }
  
  .prose li {
    margin-bottom: 0.5rem;
  }
  
  .prose blockquote {
    border-left: 4px solid #dc2626;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #6b7280;
  }
  
  .prose a {
    color: #dc2626;
    text-decoration: none;
  }
  
  .prose a:hover {
    text-decoration: underline;
  }
  
  .prose img {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }
</style>
