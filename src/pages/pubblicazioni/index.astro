---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPublications = await getCollection('pubblicazioni');
const sortedPublications = allPublications.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());
---

<Layout title="Pubblicazioni - Rete Italiana Studi Curdi" description="Pubblicazioni e ricerche della Rete Italiana Studi Curdi">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Pubblicazioni</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Le pubblicazioni e le ricerche dei membri della Rete Italiana Studi Curdi
      </p>
    </div>

    {sortedPublications.length > 0 ? (
      <div class="space-y-8">
        {sortedPublications.map((publication) => (
          <article class="bg-white rounded-lg shadow-md p-8 hover:shadow-lg transition-shadow">
            <div class="flex flex-col lg:flex-row lg:items-start gap-6">
              <div class="flex-1">
                <h2 class="text-2xl font-semibold text-gray-900 mb-3">
                  <a href={`/pubblicazioni/${publication.slug}`} class="hover:text-red-600 transition-colors">
                    {publication.data.title}
                  </a>
                </h2>
                
                <div class="mb-4">
                  <p class="text-gray-700 font-medium mb-2">
                    {publication.data.authors.join(', ')}
                  </p>
                  <p class="text-gray-600 text-sm">
                    {publication.data.publisher} â€¢ {publication.data.pubDate.toLocaleDateString('it-IT')}
                  </p>
                </div>

                <p class="text-gray-600 mb-4 leading-relaxed">
                  {publication.data.abstract}
                </p>

                <div class="flex flex-wrap gap-4">
                  {publication.data.doi && (
                    <a 
                      href={`https://doi.org/${publication.data.doi}`}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-700 hover:bg-blue-200 transition-colors"
                    >
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd"></path>
                      </svg>
                      DOI
                    </a>
                  )}
                  
                  {publication.data.pdfUrl && (
                    <a 
                      href={publication.data.pdfUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-red-100 text-red-700 hover:bg-red-200 transition-colors"
                    >
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                      </svg>
                      PDF
                    </a>
                  )}
                </div>

                {publication.data.tags && publication.data.tags.length > 0 && (
                  <div class="mt-4 flex flex-wrap gap-2">
                    {publication.data.tags.map((tag) => (
                      <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-full text-xs">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg">Nessuna pubblicazione disponibile al momento.</p>
      </div>
    )}
  </div>
</Layout>
