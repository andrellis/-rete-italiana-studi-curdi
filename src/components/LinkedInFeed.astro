---
export interface Props {
  username: string;
  height?: number;
  title?: string;
}

const { username, height = 400, title = "Seguici su LinkedIn" } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6">
  <h3 class="text-xl font-semibold text-gray-900 mb-4 flex items-center">
    <svg class="w-6 h-6 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    {title}
  </h3>
  
  <!-- LinkedIn Company/Profile Page Embed -->
  <div class="linkedin-embed-container">
    <iframe 
      src={`https://www.linkedin.com/embed/feed/update/urn:li:share:${username}`}
      height={height}
      width="100%"
      frameborder="0"
      allowfullscreen
      title="LinkedIn Feed"
      class="rounded-lg"
    ></iframe>
  </div>
  
  <!-- Fallback content if LinkedIn embed fails -->
  <div class="linkedin-fallback hidden">
    <p class="text-gray-600 text-sm mb-4">
      Segui i nostri aggiornamenti su LinkedIn per rimanere informato sui nostri eventi e pubblicazioni.
    </p>
    <a 
      href={`https://www.linkedin.com/company/${username}`} 
      target="_blank" 
      rel="noopener noreferrer"
      class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
    >
      <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
      Seguici su LinkedIn
    </a>
  </div>
</div>

<script>
  // Fallback handling
  document.addEventListener('DOMContentLoaded', function() {
    setTimeout(function() {
      const linkedinContainer = document.querySelector('.linkedin-embed-container') as HTMLElement;
      const fallback = document.querySelector('.linkedin-fallback') as HTMLElement;
      
      if (linkedinContainer && fallback) {
        // If no content is loaded after 5 seconds, show fallback
        setTimeout(function() {
          const iframe = linkedinContainer.querySelector('iframe') as HTMLElement;
          if (!iframe || iframe.offsetHeight === 0) {
            linkedinContainer.style.display = 'none';
            fallback.classList.remove('hidden');
          }
        }, 5000);
      }
    }, 1000);
  });
</script>

<style>
  .linkedin-embed-container {
    min-height: 400px;
  }
  
  .linkedin-fallback {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 200px;
    text-align: center;
  }
  
  /* Custom styling for LinkedIn embed */
  iframe {
    border-radius: 0.5rem;
  }
</style>
